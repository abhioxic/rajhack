<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@android:color/background_light"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="5sp"
        android:elevation="10dp">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="#3F51B5"
                android:id="@+id/mandicardtop">
                <TextView android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_gravity="left"
                    android:textAllCaps="true"
                    android:text="GRAIN"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/mandicardtexttop"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/mandicardtop">

                <GridLayout
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="2"
                    >

                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="125sp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:src="@drawable/i1_1"
                        android:id="@+id/mandicardimg"
                        android:text="Button" />
                    <RelativeLayout android:layout_width="230sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp">
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grade Price"
                            android:id="@+id/mandicardt1"
                            android:layout_marginTop="10sp"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/mandicardtt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/mandicardt2"
                            android:layout_alignStart="@+id/mandicardtt2"
                            android:text="1000"
                            android:textSize="20sp" />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minimum Price"
                            android:id="@+id/mandicardt2"
                            android:layout_marginTop="10sp"
                            android:layout_below="@id/mandicardt1"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/mandicardtt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/mandicardt2"
                            android:layout_alignBottom="@+id/mandicardt1"
                            android:layout_marginStart="23dp"
                            android:layout_toEndOf="@+id/mandicardt2"
                            android:text="1000"
                            android:textSize="20sp" />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maximum Price"
                            android:id="@+id/mandicardt3"
                            android:layout_marginTop="10sp"
                            android:layout_below="@id/mandicardt2"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/mandicardtt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/mandicardt3"
                            android:layout_alignBottom="@+id/mandicardt3"
                            android:layout_alignStart="@+id/mandicardtt2"
                            android:text="1000"
                            android:textSize="20sp" />
                    </RelativeLayout>



                </GridLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>